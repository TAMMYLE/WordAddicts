<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/backgroundcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="left">
            <ImageView
                android:id="@+id/infobutton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/info"
                android:gravity="center_horizontal"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/coins"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/storeCoin"
                android:gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

    ///logo
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingTop="20dp"
            android:src="@drawable/shoppingcart"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:fontFamily="@font/cormorant_garamond_bold"
            android:text="STORE"
            android:gravity="center"
            android:textSize="40dp"

            />
    </LinearLayout>
    //the menu starts

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/basicPack"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:background="@color/cardview_light_background"
                    android:layout_margin="2dp" />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/coin"
                    android:background="@drawable/circlebackgroundlightgray"
                    android:paddingLeft="40dp"
                    android:padding="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="20dp"
                    android:text="250 COINS"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/squareyellow"
                    android:text="1.99$"
                    android:gravity="center"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/valuePack"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:background="@color/cardview_light_background"
                    android:layout_margin="2dp"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/coins"
                    android:background="@drawable/circlebackgroundlightgray"
                    android:paddingLeft="40dp"
                    android:padding="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="20dp"
                    android:text="500 COINS"
                    android:textSize="20sp"
                    android:textStyle="bold"
                     />

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/squareyellow"
                    android:text="2.99$"
                    android:gravity="center"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/megaPack"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:background="@color/cardview_light_background"
                    android:layout_margin="2dp"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/coindouble"
                    android:background="@drawable/circlebackgroundlightgray"
                    android:paddingLeft="40dp"
                    android:padding="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="20dp"
                    android:text="1500 COINS"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/squareyellow"
                    android:text="7.99$"
                    android:gravity="center"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/superPack"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:background="@color/cardview_light_background"
                    android:layout_margin="2dp"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/cointriple"
                    android:background="@drawable/circlebackgroundlightgray"
                    android:paddingLeft="40dp"
                    android:padding="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="20dp"
                    android:text="3000 COINS"
                    android:textSize="20sp"
                    android:textStyle="bold"
                     />

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/squareyellow"
                    android:text="14.99$"
                    android:gravity="center"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>



</LinearLayout>

</ScrollView>





</LinearLayout>