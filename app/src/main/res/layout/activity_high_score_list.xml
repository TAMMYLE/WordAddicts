<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/backgroundcolor">
    ///logo
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="30dp"
            android:background="@drawable/circlebackgroundred"
            android:src="@drawable/ic_format_list_numbered_black_24dp"
            />

    </LinearLayout>
    //the menu starts
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/speedHighScoreCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:background="@color/cardview_light_background"
                    android:layout_margin="2dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_av_timer_black_24dp"
                    android:background="@drawable/circlebackgroundclay"
                    android:paddingLeft="40dp"
                    android:padding="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Speed"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:background="@color/cardview_light_background"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="18dp"
                        android:text="High Score in the speed mode"/>

                </LinearLayout>

                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    /**the second line of choice
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/classicHighScoreCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:background="@color/cardview_light_background"
                    android:layout_margin="2dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_border_color_black_24dp"
                    android:background="@drawable/circlebackgroundforest"
                    android:paddingLeft="40dp"
                    android:padding="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Classic"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:background="@color/cardview_light_background"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="18dp"
                        android:text="High Score in the classic mode"/>

                </LinearLayout>

                android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>





</LinearLayout>